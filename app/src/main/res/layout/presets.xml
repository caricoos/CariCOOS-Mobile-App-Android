<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp" >

        <CheckBox android:id="@+id/PR_preset_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puerto Rico"
            android:checked="true"
            android:layout_marginBottom="10dp"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#287AA9"/>


        <CheckBox android:id="@+id/WEST_preset_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WEST Coast"
            android:checked="false"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#287AA9"/>


        <CheckBox android:id="@+id/SJ_preset_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="San Juan"
            android:checked="false"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#287AA9"/>

        <CheckBox android:id="@+id/VI_preset_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Virgin Islands"
            android:checked="false"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>


    </LinearLayout>

    <Button
        android:id="@+id/presets_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="DONE"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"/>

</LinearLayout>